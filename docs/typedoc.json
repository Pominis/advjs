{
  "$schema": "https://typedoc.org/schema.json",
  "readme": "none",
  "plugin": [
    "typedoc-plugin-markdown",
    "typedoc-vitepress-theme"
    // "typedoc-plugin-merge-modules"
  ],
  "entryPoints": [
    "../packages/types/src/index.ts",
    "../packages/core/src/index.ts",
    "../packages/parser/src/index.ts",
    // client
    "../packages/client/index.ts",
    // themes
    "../themes/theme-default/index.ts",
    // "../themes/theme-pominis/index.ts",
    // plugins
    "../plugins/plugin-babylon/src/index.ts",
    "../plugins/plugin-obs/src/index.ts",
    "../plugins/plugin-pominis/src/index.ts",
    "../plugins/plugin-runware/src/index.ts",
    // gui
    "../packages/gui/index.ts",
    "../packages/unocss/src/index.ts"
  ],
  "out": "api",
  "categorizeByGroup": true,
  "githubPages": true,
  // https://typedoc-plugin-markdown.org/plugins/vitepress
  "sidebar": {
    "autoConfiguration": true,
    "format": "vitepress",
    "pretty": true,
    "collapsed": true
  }
}
