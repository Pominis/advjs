{
  "compilerOptions": {
    "target": "ESNext",
    "jsx": "preserve",
    "lib": ["DOM", "ESNext"],
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": [
      "advjs/client",
      "node",
      // "@babylonjs/core",
      // "@babylonjs/loaders",
      // "@babylonjs/gui",
      // "@babylonjs/materials",
      // "babylon-vrm-loader",
      "vite/client",
      "vite-plugin-vue-layouts/client"
    ],
    "strict": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "exclude": ["**/dist/**", "node_modules"]
}
